{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v1/schema.json",
  "package": {
    "productName": "SearchEvery",
    "version": "0.1.0"
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "open": true
      }
    },
    "windows": [
      {
        "title": "SearchEvery",
        "width": 1400,
        "height": 800,
        "resizable": true
      }
    ],
    "bundle": {
      "active": true,
      "identifier": "com.search.everywhere",
      "icon": ["icons/icon.ico"]
    }
  }
}